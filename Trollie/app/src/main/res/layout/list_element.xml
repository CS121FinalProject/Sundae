<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:weightSum="1">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="300dp"
        android:layout_height="320dp"
        android:background="#fff"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp">
        
        <ImageView
            android:id="@+id/location_img"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:contentDescription="locationImage"
            android:scaleType="fitXY"
            android:src="@drawable/ninetynine_logo1"/>

        <TextView
            android:layout_below="@+id/location_img"
            android:id="@+id/info_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="90dp"
            android:fontFamily="sans-serif-light"
            android:textAppearance="?android:attr/textAppearanceLarge"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:id="@+id/maleIcon"
                android:src="@drawable/male_user_grey"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/maleCount"
                android:layout_alignParentRight="true"
                android:layout_marginTop="140dp"
                android:text="10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:fontFamily="sans-serif-light"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginTop="130dp"
                android:id="@+id/femaleIcon"
                android:src="@drawable/female_user_grey"
                android:scaleType="fitCenter"/>

            <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/femaleCount"
                android:layout_alignParentRight="true"
                android:layout_marginTop="140dp"
                android:text="10"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:fontFamily="sans-serif-light"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ageLowCat"
                android:layout_marginLeft="30dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="200dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="18-21"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/ageMedCat"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="200dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="22-25"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/ageHighCat"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="200dp"
                android:fontFamily="sans-serif-light"
                android:textStyle="bold"
                android:text="26-30"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/ageLow"
                android:layout_marginLeft="30dp"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="230dp"
                android:fontFamily="sans-serif-light"
                android:text="18-21"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/ageMed"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="230dp"
                android:fontFamily="sans-serif-light"
                android:text="22-25"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/ageHigh"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_marginTop="230dp"
                android:fontFamily="sans-serif-light"
                android:text="26-30"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textAlignment="center" />

        </LinearLayout>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/checkInBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="center|bottom"
            android:text="Check-In"
            android:fontFamily="sans-serif-light"/>

    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="210dp"
        android:layout_height="15dp"
        android:id="@+id/itemText"
        android:layout_gravity="center"
        />

    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textAppearance="?android:attr/textAppearanceSmall"-->
        <!--android:text="Small Text"-->
        <!--android:id="@+id/textView2"-->
        <!--android:layout_gravity="center_horizontal"-->
        <!--/>-->

</LinearLayout>